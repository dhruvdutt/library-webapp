<?php $__env->startSection('content'); ?>
<div class="container">
	<?php if(sizeof($reports) == 0): ?>
		<h3>No Records</h3>
	<?php else: ?>
		<div class="row">
			<div class="col-md-12">
				<button class="btn btn-primary" style="float:right" id="download">Download</button><br />
			</div>
		</div>
		<div class="row">
	        <div class="col-md-12" id="report">
	        	<h4>Issue Report</h4>
	           	<table class="table sortable-theme-bootstrap" data-sortable>
	                <thead>
	                    <tr>
	                    	<th data-field="name" data-sortable="false">Reader ID</th>
	                        <th data-field="name" data-sortable="false">Accession Number</th>
	                        <th data-field="price">Issue Date</th>
	                        <th data-field="price">Return Date</th>
	                        <th data-field="price">Returned Date</th>
	                        <th data-field="price">Fine</th>
	                    </tr>
	                    </thead>
	                    <tbody>
	                    <?php foreach($reports as $report): ?>
	                        <tr>
	                        	<td><?php echo e($report->readerid); ?></td>
	                            <td><?php echo e($report->accession_no); ?></td>
	                            <td><?php echo e($report->issuedate); ?></td>
	                            <td><?php echo e($report->returndate); ?></td>
	                            <?php if($report->returneddate == null): ?>
	                                <td>-</td>
	                            <?php else: ?>
	                                <td><?php echo e($report->returneddate); ?></td>
	                            <?php endif; ?>
	                            <?php if($report->fine == null): ?>
	                                <td>-</td>
	                            <?php else: ?>
	                                <td><?php echo e($report->fine); ?></td>
	                            <?php endif; ?>
	                        </tr>
	                    <?php endforeach; ?>
	                    </tbody>
	                </table>
	            </div>
	        </div>
    <?php endif; ?>
</div>
<?php $__env->stopSection(); ?>

<?php echo $__env->make('layouts.nav', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>