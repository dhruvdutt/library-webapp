<?php $__env->startSection('content'); ?>
    <div class="container">
      <?php if(sizeof($records) == 0): ?>
        <h3 style="text-align:center">No Records</h3>
      <?php else: ?>
      <table class="table">
          <thead>
          <tr>
              <th data-field="id">Reader ID</th>
              <th data-field="name">Publication ID</th>
              <th data-field="price">Issue Date</th>
              <th data-field="price">Return Date</th>
              <th data-field="price">Returned Date</th>
              <th data-field="price">Fine</th>
          </tr>
          </thead>
          <tbody>
          <?php foreach($records as $record): ?>
              <tr>
                  <td><?php echo e($record->readerid); ?></td>
                  <td><?php echo e($record->accession_no); ?></td>
                  <td><?php echo e($record->issuedate); ?></td>
                  <td><?php echo e($record->returndate); ?></td>
                  <?php if($record->returneddate == null): ?>
                      <td>-</td>
                  <?php else: ?>
                      <td><?php echo e($record->returneddate); ?></td>
                  <?php endif; ?>
                  <?php if($record->fine == null): ?>
                      <td>-</td>
                  <?php else: ?>
                      <td><?php echo e($record->fine); ?></td>
                  <?php endif; ?>
              </tr>
          <?php endforeach; ?>
          </tbody>
      </table>
      <?php echo Form::open(array('route'=>'returnedPublication')); ?>

      <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <?php echo Form::label('note','Note'); ?>

              <?php echo Form::text('note',null,['class'=>'form-control']); ?>

            </div>
            <button type="submit" class="btn btn-primary">Return</button>
          </div>
          <div class="col-md-4"></div>
          <div class="col-md-4"></div>
      </div>
      <?php echo Form::close(); ?>

      <?php endif; ?>
    </div>
<?php $__env->stopSection(); ?>
<?php echo $__env->make('layouts.nav', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>